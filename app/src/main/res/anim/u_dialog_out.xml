<?xml version="1.0" encoding="utf-8"?>
<set android:ordering="sequentially"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <set android:ordering="together">
        <objectAnimator android:interpolator="@android:anim/accelerate_interpolator" android:duration="180" android:valueFrom="0" android:valueTo="-100" android:propertyName="translationY" />
    </set>
    <set android:ordering="together">
        <objectAnimator android:interpolator="@android:anim/accelerate_interpolator" android:duration="240" android:valueFrom="-100" android:valueTo="2000" android:propertyName="translationY" />
        <objectAnimator android:interpolator="@android:anim/accelerate_interpolator" android:duration="180" android:valueFrom="0" android:valueTo="-8" android:propertyName="rotation" />
    </set>
</set>