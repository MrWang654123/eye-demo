<?xml version="1.0" encoding="utf-8"?>
<set android:ordering="sequentially"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <objectAnimator android:duration="0" android:valueFrom="0" android:valueTo="8" android:propertyName="rotation" />
    <set android:ordering="together">
        <set android:ordering="sequentially">
            <objectAnimator android:duration="360" android:valueFrom="2000" android:valueTo="-80" android:propertyName="translationY" />
            <objectAnimator android:duration="240" android:valueFrom="-80" android:valueTo="0" android:propertyName="translationY" />
        </set>
        <objectAnimator android:duration="240" android:startOffset="100" android:valueFrom="8" android:valueTo="0" android:propertyName="rotation" />
    </set>
</set>