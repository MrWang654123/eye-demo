<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!--标题栏-->
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>


    <!--账号输入登录模块-->
    <LinearLayout
        android:id="@+id/ll_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_below="@+id/toolbar">

        <!--提示要绑定的手机号-->
        <TextView
            android:id="@+id/tv_bind_phone_num_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:textSize="18sp"
            android:textColor="@color/colorAccent"
            android:text="@string/bind_phone_num"/>

        <!--账号/手机号输入-->
        <RelativeLayout
            android:id="@+id/rl_user_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="visible"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp">

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="@dimen/heightBigWidget"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_corner_f4f5ed_8dp"
                android:hint="请输入账号/手机号"
                android:maxLines="1"
                android:singleLine="true"
                android:inputType="text"
                android:paddingLeft="20dp"
                android:textColor="@color/color_333333"
                android:imeOptions="actionNext"
                android:textSize="15sp" />

        </RelativeLayout>

        <!--密码输入-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp">

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/heightBigWidget"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/shape_corner_f4f5ed_8dp"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:paddingLeft="20dp"
                android:maxLength="24"
                android:textColor="@color/color_333333"
                android:imeOptions="actionDone"
                android:textSize="15sp" />

            <CheckBox
                android:id="@+id/cbox_password"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:button="@null"
                android:drawableLeft="@drawable/rbtn_password_view"/>

        </RelativeLayout>

        <!--图形验证码-->
        <RelativeLayout
            android:id="@+id/rl_image_captcha"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="50dp"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp">

            <EditText
                android:id="@+id/et_image_captcha"
                android:layout_width="match_parent"
                android:layout_height="@dimen/heightBigWidget"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/shape_corner_f4f5ed_8dp"
                android:hint="请输入验证码"
                android:maxLines="1"
                android:singleLine="true"
                android:maxLength="8"
                android:paddingLeft="20dp"
                android:textColor="@color/color_333333"
                android:imeOptions="actionDone"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_image_captcha"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_image_small"/>

        </RelativeLayout>

        <!--其他操作：忘记密码-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp">

            <TextView
                android:id="@+id/tv_retrieve_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:drawableLeft="@drawable/ico_mark"
                android:drawablePadding="6dp"
                android:text="忘记密码"
                android:textColor="@color/color_555555"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_phonenum_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="手机号快捷登录"
                android:textColor="@color/color_333333"
                android:textSize="14sp" />

        </RelativeLayout>

        <!--登录-->
        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/heightBigWidget"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/btn_common"
            android:enabled="true"
            android:text="登   录"
            android:textColor="@color/color_333333"
            android:textSize="16sp" />

    </LinearLayout>

    <!--第三方登录-->
    <LinearLayout
        android:id="@+id/ll_third_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_user"
        android:layout_marginTop="30dp"
        android:visibility="visible"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <!--微信-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="40dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_wx_login"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:visibility="visible"
                    android:src="@drawable/btn_wechat_login_reverse" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="微信登录"
                    android:textSize="12sp"
                    android:textColor="@color/color_444444"/>

            </LinearLayout>

            <!--QQ-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="40dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_qq_login"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:visibility="visible"
                    android:src="@drawable/btn_qq_login_reverse" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="QQ登录"
                    android:textSize="12sp"
                    android:textColor="@color/color_444444"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
