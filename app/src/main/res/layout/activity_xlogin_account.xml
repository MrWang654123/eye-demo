<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--标题栏-->
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>


    <!--账号输入登录模块-->
    <LinearLayout
        android:id="@+id/ll_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_below="@+id/toolbar">

        <!--账号/手机号输入-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginHorizontal="35dp">

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:background="#00000000"
                android:hint="请输入账号/手机号"
                android:maxLines="1"
                android:singleLine="true"
                android:inputType="text"
                android:textColor="@color/color_333333"
                android:imeOptions="actionNext"
                android:textSize="15sp" />

            <include layout="@layout/edittext_bottom_part_line"/>
        </RelativeLayout>

        <!--密码输入-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="35dp">

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="#00000000"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/color_333333"
                android:imeOptions="actionDone"
                android:textSize="15sp" />

            <CheckBox
                android:id="@+id/cbox_password"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:button="@null"
                android:drawableLeft="@drawable/rbtn_password_view"/>

            <include layout="@layout/edittext_bottom_part_line"/>
        </RelativeLayout>

        <!--登录-->
        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/heightDefaultWidget"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/btn_common_round"
            android:enabled="true"
            android:text="登   录"
            android:textColor="@color/color_text_white"
            android:textSize="16sp" />

        <!--其他操作：忘记密码-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp">

            <TextView
                android:id="@+id/tv_retrieve_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="忘记密码？"
                android:textColor="@color/color_bar_blue"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_phonenum_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="手机号快捷登录"
                android:textColor="@color/color_333333"
                android:textSize="14sp" />

        </RelativeLayout>

    </LinearLayout>

    <!--第三方登录-->
    <LinearLayout
        android:id="@+id/ll_third_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_user"
        android:layout_marginTop="30dp"
        android:visibility="visible"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <!--微信-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="40dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_wx_login"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:visibility="visible"
                    android:background="@color/color_bar_blue"
                    android:src="@mipmap/login_new_wx" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="微信账户"
                    android:textSize="14sp"
                    android:textColor="@color/color_88ffffff"/>

            </LinearLayout>

            <!--QQ-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="40dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_qq_login"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:visibility="visible"
                    android:background="@color/color_bar_blue"
                    android:src="@mipmap/login_new_qs" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="QQ账户"
                    android:textSize="14sp"
                    android:textColor="@color/color_88ffffff"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
