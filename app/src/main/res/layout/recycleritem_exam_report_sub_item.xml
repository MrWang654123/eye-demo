<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="15dp"
    android:paddingStart="15dp"
    android:paddingRight="15dp"
    android:paddingEnd="15dp"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_corner_ffffff_5dp_eeeeee_1dp"
        android:orientation="vertical">

        <View
            android:id="@+id/vPre"
            android:layout_width="5dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/tv_result"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/colorAccent"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/color_444444"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintLeft_toRightOf="@+id/vPre"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/iv_right_arrow"
            android:text="消极情绪"/>

        <!--结果-->
        <TextView
            android:id="@+id/tv_result"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/color_666666"
            android:textSize="16sp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:paddingBottom="10dp"
            android:lineSpacingMultiplier="1.2"
            app:layout_constraintLeft_toLeftOf="@+id/tv_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            app:layout_constraintRight_toLeftOf="@+id/iv_right_arrow"
            android:text="本测评评价为看是否可靠双方开始开发是开发康师傅"/>

        <!--描述-->
        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/color_898989"
            android:textSize="16sp"
            android:lineSpacingMultiplier="1.2"
            android:paddingTop="10dp"
            android:paddingBottom="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_result"
            app:layout_constraintRight_toRightOf="parent"
            android:text="本测评评价为看是否可靠双方开始开发是开发康师傅"/>

        <ImageView
            android:id="@+id/iv_expand"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_arrow_drop_down"
            app:layout_constraintTop_toTopOf="@+id/vPre"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:paddingBottom="15dp"
            android:paddingLeft="20dp"
            android:paddingStart="20dp"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/iv_right_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_chevron_right_black_24dp"
            app:layout_constraintTop_toTopOf="@+id/vPre"
            app:layout_constraintBottom_toBottomOf="@+id/vPre"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            tools:ignore="ContentDescription" />

    </android.support.constraint.ConstraintLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="15dp"/>

</LinearLayout>
