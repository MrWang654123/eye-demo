<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.cheersmind.cheersgenie.features.modules.test.activity.TextViewForHtmlImageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="2dp"
        android:gravity="center_horizontal">
        <com.cheersmind.cheersgenie.features.view.PasteEditText
            android:id="@+id/et_captcha_num1"
            style="@style/captcha_edit"
            android:inputType="number"
            android:hint="@string/blank" />
        <com.cheersmind.cheersgenie.features.view.PasteEditText
            android:id="@+id/et_captcha_num2"
            style="@style/captcha_edit"
            android:inputType="number"
            android:hint="@string/blank" />
        <com.cheersmind.cheersgenie.features.view.PasteEditText
            android:id="@+id/et_captcha_num3"
            style="@style/captcha_edit"
            android:inputType="number"
            android:hint="@string/blank" />
        <com.cheersmind.cheersgenie.features.view.PasteEditText
            android:id="@+id/et_captcha_num4"
            style="@style/captcha_edit"
            android:inputType="number"
            android:hint="@string/blank" />
        <com.cheersmind.cheersgenie.features.view.PasteEditText
            android:id="@+id/et_captcha_num5"
            style="@style/captcha_edit"
            android:inputType="number"
            android:hint="@string/blank" />
        <com.cheersmind.cheersgenie.features.view.PasteEditText
            android:id="@+id/et_captcha_num6"
            style="@style/captcha_edit"
            android:inputType="number"
            android:hint="@string/blank" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_use_paste"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="粘贴测试内容"
        android:text="234567"
        android:inputType="number" />

</LinearLayout>
