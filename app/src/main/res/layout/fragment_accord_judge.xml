<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_ques_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="16sp"
                android:text="这是题目的标题"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <com.cheersmind.cheersgenie.main.view.RoundProgressBar
                    android:id="@+id/roundProgressBar"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_centerInParent="true"
                    android:rotation="-90"
                    android_custom:roundColor="#e0e0e0"
                    android_custom:max="100"
                    android_custom:roundProgressColor="#12b2f4"
                    android_custom:textColor="#e0e0e0"
                    android_custom:textIsDisplayable="true"
                    android_custom:roundWidth="100dp"
                    android_custom:textSize="10sp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="30dp">

            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</LinearLayout>