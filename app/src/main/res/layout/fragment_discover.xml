<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f5f5"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.cheersmind.cheersgenie.features.view.RefreshLayout
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <android.support.design.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.design.widget.AppBarLayout
                    android:id="@+id/appbar_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_f5f5f5"
                    android:clipChildren="false"
                    app:layout_behavior="@string/CompatFlingBehavior">

                    <com.cheersmind.cheersgenie.features.view.HorizontalViewPager
                        android:id="@+id/viewPagerBanner"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginLeft="@dimen/bannerHorizontalMargin"
                        android:layout_marginRight="@dimen/bannerHorizontalMargin"
                        android:layout_marginTop="@dimen/bannerVerticalMargin"
                        android:layout_marginBottom="@dimen/bannerVerticalMargin"
                        android:clipChildren="false"
                        app:layout_scrollFlags="scroll"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:baselineAligned="false"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:background="@color/white"
                        app:layout_scrollFlags="scroll">

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/cl_track_record"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.facebook.drawee.view.SimpleDraweeView
                                android:id="@+id/sdv_track_record"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintWidth_percent="0.6"
                                app:layout_constraintDimensionRatio="h,1:1"
                                app:layout_constraintHorizontal_bias="0.8"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toTopOf="@+id/tv_track_record"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                fresco:roundAsCircle="true"
                                fresco:actualImageScaleType="centerCrop"
                                fresco:placeholderImage="@drawable/discover_item_tab"
                                fresco:placeholderImageScaleType="centerCrop"
                                fresco:pressedStateOverlayImage="@color/light_transparent"
                                fresco:roundWithOverlayColor="@color/white"/>
                            <!--fresco:overlayImage="@drawable/track_record"-->
                            <!--fresco:pressedStateOverlayImage="@drawable/career_plan_item"-->

                            <TextView
                                android:id="@+id/tv_track_record"
                                app:layout_constraintHorizontal_bias="0.8"
                                app:layout_constraintTop_toBottomOf="@+id/sdv_track_record"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                android:text="@string/track_record"
                                style="@style/discover_item_tab"/>

                        </android.support.constraint.ConstraintLayout>

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/cl_career_planning"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.facebook.drawee.view.SimpleDraweeView
                                android:id="@+id/sdv_career_planning"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintWidth_percent="0.6"
                                app:layout_constraintDimensionRatio="h,1:1"
                                app:layout_constraintHorizontal_bias="0.6"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toTopOf="@+id/tv_career_planning"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                fresco:roundAsCircle="true"
                                fresco:actualImageScaleType="centerCrop"
                                fresco:placeholderImage="@drawable/discover_item_tab"
                                fresco:placeholderImageScaleType="centerCrop"
                                fresco:pressedStateOverlayImage="@color/light_transparent"
                                fresco:roundWithOverlayColor="@color/white"/>

                            <TextView
                                android:id="@+id/tv_career_planning"
                                app:layout_constraintHorizontal_bias="0.6"
                                app:layout_constraintTop_toBottomOf="@+id/sdv_career_planning"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                android:text="@string/career_planning"
                                style="@style/discover_item_tab"/>

                        </android.support.constraint.ConstraintLayout>

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/cl_practice_center"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.facebook.drawee.view.SimpleDraweeView
                                android:id="@+id/sdv_practice_center"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintWidth_percent="0.6"
                                app:layout_constraintDimensionRatio="h,1:1"
                                app:layout_constraintHorizontal_bias="0.4"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toTopOf="@+id/tv_practice_center"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                fresco:roundAsCircle="true"
                                fresco:actualImageScaleType="centerCrop"
                                fresco:placeholderImage="@drawable/discover_item_tab"
                                fresco:placeholderImageScaleType="centerCrop"
                                fresco:pressedStateOverlayImage="@color/light_transparent"
                                fresco:roundWithOverlayColor="@color/white"/>

                            <TextView
                                android:id="@+id/tv_practice_center"
                                app:layout_constraintHorizontal_bias="0.4"
                                app:layout_constraintTop_toBottomOf="@+id/sdv_practice_center"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                android:text="@string/practice_center"
                                style="@style/discover_item_tab"/>

                        </android.support.constraint.ConstraintLayout>

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/cl_knowledge_fun"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.facebook.drawee.view.SimpleDraweeView
                                android:id="@+id/sdv_knowledge_fun"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintWidth_percent="0.6"
                                app:layout_constraintDimensionRatio="h,1:1"
                                app:layout_constraintHorizontal_bias="0.2"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toTopOf="@+id/tv_knowledge_fun"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                fresco:roundAsCircle="true"
                                fresco:actualImageScaleType="centerCrop"
                                fresco:placeholderImage="@drawable/discover_item_tab"
                                fresco:placeholderImageScaleType="centerCrop"
                                fresco:pressedStateOverlayImage="@color/light_transparent"
                                fresco:roundWithOverlayColor="@color/white"/>

                            <TextView
                                android:id="@+id/tv_knowledge_fun"
                                app:layout_constraintHorizontal_bias="0.2"
                                app:layout_constraintTop_toBottomOf="@+id/sdv_knowledge_fun"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                android:text="@string/knowledge_fun"
                                style="@style/discover_item_tab"/>

                        </android.support.constraint.ConstraintLayout>

                    </LinearLayout>

                    <!--最新测评-->
                    <include layout="@layout/recycler_header_home_evaluation"
                        android:id="@+id/evaluation_block"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_scrollFlags="scroll"/>

                </android.support.design.widget.AppBarLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycleView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbarStyle="outsideOverlay"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:layout_anchor="@id/recycleView"
                    app:layout_anchorGravity="right|bottom"
                    app:fabSize="mini"
                    android:visibility="gone"
                    android:src="@drawable/ic_start" />
                <!--app:layout_scrollFlags="scroll|enterAlways|snap"-->
                <!--app:layout_behavior="@string/translate_up_down_behavior"-->

            </android.support.design.widget.CoordinatorLayout>

        </com.cheersmind.cheersgenie.features.view.RefreshLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabGotoTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="right|bottom"
            android:visibility="visible"
            app:fabSize="mini"
            android:src="@drawable/goto_top" />

    </FrameLayout>

    <!--空布局-->
    <com.cheersmind.cheersgenie.features.view.XEmptyLayout
        android:id="@+id/emptyLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

</FrameLayout>