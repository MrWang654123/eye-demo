<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features_v2.modules.major.fragment.MajorDetailInfoFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f5f5f5">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nsv_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--招生办信息-->
                <LinearLayout
                    android:id="@+id/ll_enroll_base_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/resource_lib_block_title"
                        android:text="招生办信息"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_eeeeee"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingStart="15dp"
                        android:paddingRight="15dp"
                        android:paddingEnd="15dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:orientation="vertical">

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/cl_contact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/iv_contact"
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_phone_black_24dp"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:id="@+id/tv_contact_key"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintLeft_toRightOf="@+id/iv_contact"
                                app:layout_constraintTop_toTopOf="parent"
                                android:textColor="@color/color_666666"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_marginLeft="10dp"
                                android:text="招生办联系方式："/>

                            <TextView
                                android:id="@+id/tv_contact_val"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintLeft_toLeftOf="@+id/tv_contact_key"
                                app:layout_constraintTop_toBottomOf="@+id/tv_contact_key"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintHorizontal_bias="0"
                                android:textColor="@color/color_777777"
                                android:textSize="16sp"
                                android:layout_marginTop="8dp"
                                android:text="0595-129323023"/>

                        </android.support.constraint.ConstraintLayout>

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/cl_website"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">

                            <ImageView
                                android:id="@+id/iv_website"
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_home_black_24dp"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:id="@+id/tv_website_key"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintLeft_toRightOf="@+id/iv_website"
                                app:layout_constraintTop_toTopOf="parent"
                                android:textColor="@color/color_666666"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_marginLeft="10dp"
                                android:text="招生办官网："/>

                            <TextView
                                android:id="@+id/tv_website_val"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintLeft_toLeftOf="@+id/tv_website_key"
                                app:layout_constraintTop_toBottomOf="@+id/tv_website_key"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintHorizontal_bias="0"
                                android:textColor="@color/color_777777"
                                android:textSize="16sp"
                                android:layout_marginTop="8dp"
                                android:text="http://www.suitsfjsf.com"/>

                        </android.support.constraint.ConstraintLayout>

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/cl_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">

                            <ImageView
                                android:id="@+id/iv_address"
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_location_on_black_24dp"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:id="@+id/tv_address_key"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintLeft_toRightOf="@+id/iv_address"
                                app:layout_constraintTop_toTopOf="parent"
                                android:textColor="@color/color_666666"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_marginLeft="10dp"
                                android:text="招生办地址："/>

                            <TextView
                                android:id="@+id/tv_address_val"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintLeft_toLeftOf="@+id/tv_address_key"
                                app:layout_constraintTop_toBottomOf="@+id/tv_address_key"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintHorizontal_bias="0"
                                android:textColor="@color/color_777777"
                                android:textSize="16sp"
                                android:layout_marginTop="8dp"
                                android:text="福建省福州市晋安区撒旦街道111号"/>

                        </android.support.constraint.ConstraintLayout>

                    </LinearLayout>

                </LinearLayout>

                <!--招生章程-->
                <LinearLayout
                    android:id="@+id/ll_enroll_constitution"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/resource_lib_block_title"
                        android:text="招生章程"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_eeeeee"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingStart="15dp"
                        android:paddingRight="15dp"
                        android:paddingEnd="15dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="20dp"
                        android:orientation="vertical">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recyclerViewEnrollConstitution"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

                <!--院校录取-->
                <LinearLayout
                    android:id="@+id/ll_college_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/resource_lib_block_title"
                        android:text="院校录取"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_eeeeee"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_college_score_province"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="10dp"
                                android:textSize="16sp"
                                android:textColor="@color/color_555555"
                                android:gravity="center"
                                android:drawableRight="@drawable/arrow_up_down"
                                android:text="生源地"/>

                            <TextView
                                android:id="@+id/tv_college_score_kind"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="10dp"
                                android:textSize="16sp"
                                android:textColor="@color/color_555555"
                                android:gravity="center"
                                android:drawableRight="@drawable/arrow_up_down"
                                android:text="文理科"/>

                            <TextView
                                android:id="@+id/tv_college_score_year"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="10dp"
                                android:textSize="16sp"
                                android:textColor="@color/color_555555"
                                android:gravity="center"
                                android:drawableRight="@drawable/arrow_up_down"
                                android:visibility="invisible"
                                android:text="年份"/>

                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/rvCollegeScore"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone"/>

                            <TextView
                                android:id="@+id/tv_college_enroll_score_empty_tip"
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:textColor="@color/color_999999"
                                android:gravity="center"
                                android:text="@string/empty_tip_enroll_score"/>

                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>

                <!--专业录取-->
                <LinearLayout
                    android:id="@+id/ll_major_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/resource_lib_block_title"
                        android:text="专业录取"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_eeeeee"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_major_score_province"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="10dp"
                                android:textSize="16sp"
                                android:textColor="@color/color_555555"
                                android:gravity="center"
                                android:drawableRight="@drawable/arrow_up_down"
                                android:text="生源地"/>

                            <TextView
                                android:id="@+id/tv_major_score_year"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="10dp"
                                android:textSize="16sp"
                                android:textColor="@color/color_555555"
                                android:gravity="center"
                                android:drawableRight="@drawable/arrow_up_down"
                                android:text="年份"/>

                            <TextView
                                android:id="@+id/tv_major_score_kind"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="10dp"
                                android:textSize="16sp"
                                android:textColor="@color/color_555555"
                                android:gravity="center"
                                android:drawableRight="@drawable/arrow_up_down"
                                android:text="文理科"/>

                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/rvMajorScore"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone"/>

                            <TextView
                                android:id="@+id/tv_major_enroll_score_empty_tip"
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:textColor="@color/color_999999"
                                android:gravity="center"
                                android:text="@string/empty_tip_enroll_score"/>

                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabGotoTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="right|bottom"
            android:visibility="visible"
            app:fabSize="mini"
            android:src="@drawable/goto_top" />

    </FrameLayout>

    <!--空布局-->
    <com.cheersmind.cheersgenie.features.view.XEmptyLayout
        android:id="@+id/emptyLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

</FrameLayout>