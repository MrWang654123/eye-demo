<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#d9eafe"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_major"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        android:textColor="@color/color_555555"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_batch"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:text="专业名称"/>

    <TextView
        android:id="@+id/tv_batch"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:textColor="@color/color_555555"
        android:textSize="15sp"
        android:gravity="center_horizontal"
        app:layout_constraintLeft_toRightOf="@+id/tv_major"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_min_score"
        android:text="录取批次"/>

    <TextView
        android:id="@+id/tv_min_score"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textColor="@color/color_555555"
        android:textSize="15sp"
        android:gravity="center_horizontal"
        app:layout_constraintLeft_toRightOf="@+id/tv_batch"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_count"
        android:text="最低分/排名"/>

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:textColor="@color/color_555555"
        android:textSize="15sp"
        android:gravity="center_horizontal"
        app:layout_constraintLeft_toRightOf="@+id/tv_min_score"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:text="录取数"/>

</android.support.constraint.ConstraintLayout>
