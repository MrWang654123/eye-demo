<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#edf6ff"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_batch"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:textColor="@color/color_555555"
        android:textSize="16sp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_year"
        android:text="批次录取"/>

    <TextView
        android:id="@+id/tv_year"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:textColor="@color/color_555555"
        android:textSize="16sp"
        android:gravity="center_horizontal"
        app:layout_constraintLeft_toRightOf="@+id/tv_batch"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_min_score"
        android:text="年份"/>

    <TextView
        android:id="@+id/tv_min_score"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textColor="@color/color_555555"
        android:textSize="16sp"
        android:gravity="center_horizontal"
        app:layout_constraintLeft_toRightOf="@+id/tv_year"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_diff_val"
        android:text="最低分/排名"/>

    <TextView
        android:id="@+id/tv_diff_val"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:textColor="@color/color_555555"
        android:textSize="16sp"
        android:gravity="center_horizontal"
        app:layout_constraintLeft_toRightOf="@+id/tv_min_score"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_count"
        android:text="线差"/>

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:textColor="@color/color_555555"
        android:textSize="16sp"
        android:gravity="center_horizontal"
        app:layout_constraintLeft_toRightOf="@+id/tv_diff_val"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="录取数"/>

</android.support.constraint.ConstraintLayout>
