<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/shape_corner_e5e5e5_10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/clock"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_777777"
                android:textSize="16sp"
                android:text="上次未完成的测评"/>
            <TextView
                android:id="@+id/tv_last_dimension_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_555555"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingVertical="3dp"
                android:text="我是否热爱我的班级？"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_goto_last_dimension"
            android:layout_width="100dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/btn_common_small"
            android:gravity="center"
            android:textColor="@color/color_333333"
            android:layout_marginRight="10dp"
            android:text="继续完成"/>

    </LinearLayout>
</LinearLayout>

