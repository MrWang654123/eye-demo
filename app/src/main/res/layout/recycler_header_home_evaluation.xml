<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_common"
        android:paddingBottom="@dimen/padding_common"
        android:orientation="horizontal">
        <!--android:background="@drawable/shape_corner_eeeeee"-->

        <TextView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/clock"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_666666"
                android:textSize="15sp"
                android:text="上次未完成的测评"/>

            <TextView
                android:id="@+id/tv_last_dimension_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_555555"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                android:text="我是否热爱我的班级？"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_goto_last_dimension"
            android:layout_width="100dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/btn_common_small"
            android:gravity="center"
            android:textColor="@color/color_333333"
            android:layout_marginRight="@dimen/padding_common"
            android:layout_marginEnd="@dimen/padding_common"
            android:text="继续完成"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/padding_common"
        android:layout_marginStart="@dimen/padding_common"
        android:layout_marginRight="@dimen/padding_common"
        android:layout_marginEnd="@dimen/padding_common"
        android:background="@color/color_f5f5f5"/>

</LinearLayout>

