<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/color_eeeeee" />
            <corners
                android:bottomLeftRadius="@dimen/exam_item_radius"
                android:bottomRightRadius="@dimen/exam_item_radius"/>
        </shape>
    </item>
    <item android:left="1px" android:top="0dp" android:right="1px" android:bottom="1px">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:bottomLeftRadius="@dimen/exam_item_radius"
                android:bottomRightRadius="@dimen/exam_item_radius" />
        </shape>
    </item>
</layer-list>