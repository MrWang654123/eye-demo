<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#ffcc00"
                android:endColor="#f0c000"
                android:angle="90"/>
            <stroke android:width="1dip" android:color="#f0c000"/>
            <!-- <padding android:left="10dp" android:right="10dp"
                   android:top="0dp" android:bottom="0dp"/> -->
            <corners
                android:radius="@dimen/common_corner_radius_small"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <gradient
                android:startColor="#ffcc00"
                android:endColor="#f0c000"
                android:angle="90"/>
            <stroke android:width="1dip" android:color="#f0c000"/>
            <!-- <padding android:left="10dp" android:right="10dp"
                   android:top="0dp" android:bottom="0dp"/> -->
            <corners
                android:radius="@dimen/common_corner_radius_small"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <gradient
                android:startColor="#ffe7e9ec"
                android:endColor="#ffdcdfe3"
                android:angle="90"/>
            <stroke android:width="1dip" android:color="#ffadb2bb"/>
            <!-- <padding android:left="10dp" android:right="10dp"
                   android:top="0dp" android:bottom="0dp"/> -->
            <corners
                android:radius="@dimen/common_corner_radius_small"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#ffcc00"
                android:endColor="#f0c000"
                android:angle="270"/>
            <stroke android:width="1dip" android:color="#f0c000"/>
            <!-- <padding android:left="10dp" android:right="10dp"
                   android:top="0dp" android:bottom="0dp"/> -->
            <corners
                android:radius="@dimen/common_corner_radius_small"/>
        </shape>
    </item>
</selector>


