<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/white"/>
            <stroke android:width="1dip" android:color="@color/colorAccent"/>
            <padding
                android:top="3dp"
                android:bottom="3dp"
                android:left="5dp"
                android:right="5dp"/>
            <corners android:radius="3dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/white"/>
            <stroke android:width="1dip" android:color="@color/color_555555"/>
            <padding
                android:top="3dp"
                android:bottom="3dp"
                android:left="5dp"
                android:right="5dp"/>
            <corners android:radius="3dp"/>
        </shape>
    </item>
</selector>


