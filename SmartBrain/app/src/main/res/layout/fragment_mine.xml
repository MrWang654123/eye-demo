<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_text_white"
    tools:context="com.cheersmind.smartbrain.module.mine.MineFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:background="@mipmap/mine_top_bg">


        <TextView
            android:id="@+id/tv_child_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/rt_bg"
            android:layout_marginTop="10dp"
            android:text="王子涵"
            android:textSize="16sp"
            android:textColor="@color/color_text_white"/>

        <LinearLayout
            android:layout_width="85dp"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginLeft="-8dp"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_corner_white"
            android:layout_toRightOf="@+id/rt_bg">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/qs_mine_flower_count"/>
            <TextView
                android:id="@+id/tv_flower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="8dp"
                android:text="0"
                android:textColor="#fdc605"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rt_bg"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_centerInParent="true"
            android:background="@mipmap/qs_mine_evaluate">
            <ImageView
                android:id="@+id/iv_head"
                android:layout_width="83dp"
                android:layout_height="83dp"
                android:layout_centerInParent="true"
                android:background="@mipmap/avatar_parent_default"/>

        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_test"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:background="@drawable/selector_mine_btn">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="center"
                    android:src="@mipmap/qs_answer_nor"/>

                <TextView
                    android:id="@+id/tv_test"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/color_7b7b7b"
                    android:textSize="14sp"
                    android:text="我的智评"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#cdcdce"/>

            <LinearLayout
                android:id="@+id/ll_medal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:background="@drawable/selector_mine_btn">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="center"
                    android:src="@mipmap/qs_mine_flower"/>

                <TextView
                    android:id="@+id/tv_medal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/color_7b7b7b"
                    android:textSize="14sp"
                    android:text="我的鲜花" />

            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:textColor="@color/color_0073b7"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:background="#e7e7e7" />

            <LinearLayout
                android:id="@+id/ll_appraise"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:background="@drawable/selector_mine_btn">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="center"
                    android:src="@mipmap/qs_mine_comment"/>

                <TextView
                    android:id="@+id/tv_appraise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/color_7b7b7b"
                    android:textSize="14sp"
                    android:text="评价一下" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#cdcdce"/>

            <LinearLayout
                android:id="@+id/ll_feedback"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:background="@drawable/selector_mine_btn">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="center"
                    android:src="@mipmap/qs_mine_feedback"/>

                <TextView
                    android:id="@+id/tv_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/color_7b7b7b"
                    android:textSize="14sp"
                    android:text="意见反馈" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#cdcdce"/>

            <LinearLayout
                android:id="@+id/ll_setting"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:background="@drawable/selector_mine_btn">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="center"
                    android:src="@mipmap/qs_mine_setting"/>

                <TextView
                    android:id="@+id/tv_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/color_7b7b7b"
                    android:textSize="14sp"
                    android:text="设置" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:textColor="@color/color_0073b7"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:background="@color/color_text_white" />

</LinearLayout>
